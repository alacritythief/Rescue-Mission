<h1>Q: <%= @question.title %></h1>

<p><%= @question.description %></p>

<%= link_to 'Edit this Question', edit_question_path(@question) %>

<h2>Answers to this question:</h2>
<%= render @question.answers %>

<% if @question.answers[1] == nil %>
  <p>There are no answers yet. Make one!</p>
<% end %>

<h2>Enter your own answer below:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.text_field :description, placeholder: 'This is my amazing answer' %>
  </p>
    <%= f.submit 'Answer' %>
  </p>
<% end %>

<% if @question.errors.any?  %>
  <div id="error_explanation">
    <h2>Sorry, we coudn't create your reply. There were <%= pluralize(@answer.errors.count, "Error") %>:</h2>
    <ul>
    <% @answer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= link_to 'Back to Questions', questions_path %>
