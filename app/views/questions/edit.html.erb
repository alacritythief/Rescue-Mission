<h1>Editing Question</h1>

<%= form_for :question, url: question_path(@question), method: :patch do |f| %>
  <% if @question.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@question.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: 'My awesome question title' %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: 'Enter full question here with description' %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Delete this Question', question_path(@question),
                    method: :delete, data: { confirm: 'Are you sure?' } %>

